    ' QB64 wrapper for __MIDI_Play()
    Function MIDI_Play%% (fileName As String, loops As Long)
        MIDI_Play = __MIDI_Play(fileName + Chr$(NULL), loops)
    End Function


    ' QB64 wrapper for __Sound_Play()
    Function Sound_Play%% (fileName As String, looping As Byte)
        Sound_Play = __Sound_Play(fileName + Chr$(NULL), looping)
    End Function
